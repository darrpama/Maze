<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GuiInterface.Controls"
        x:DataType="local:CaveCellControl">
    <Design.PreviewWith>
        <local:CaveCellControl />
    </Design.PreviewWith>

    <Style Selector="local|CaveCellControl">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{DynamicResource ButtonBackground}"
                        BorderBrush="Black"
                        BorderThickness="2">
                    <Ellipse Margin="1"
                        IsVisible="{TemplateBinding IsCircleVisible}">
                    </Ellipse>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
